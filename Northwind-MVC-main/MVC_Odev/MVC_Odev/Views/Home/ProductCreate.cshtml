@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ProductCreate</title>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <form method="post">
                <div class="container bodyContainerMain">
                    <div class="row justify-content-center">
                        <h2>Ürün Oluştur</h2>
                        <hr />
                        <div class="row g-3 justify-content-center">
                                <label for="firstName" class="form-label">Ürün Adı</label>
                            <input type="text" class="form-control" name="ProductName">
                            <div class="row g-3 justify-content-center">
                                    <label for="firstName" class="form-label">Ürün Fiyatı</label>
                                <input type="text" class="form-control" name="UnitPrice">
                            </div>
                            <div class="row g-3 justify-content-center">
                                    <label for="firstName" class="form-label">Ürün Miktarı</label>
                                <input type="text" class="form-control" name="UnitsInStock">
                            </div>
                        </div>
                        <hr class="my-4">
                        <button class="btn btn-dark btn-lg " type="submit">Ekle</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
